<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <div class="d-flex justify-content-center">
          <h2 class="neon-text mb-3"><i class="fa-solid fa-cube"></i> Projects</h2>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <p class="text-light">My personal and professional projects</p>
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-5">
          <% data.projects.each do |project| %>
            <div class="col">
              <div class="card h-100">
                <%= image_tag project.image, alt: "project image" %>
                <div class="d-flex flex-column justify-content-between h-100">
                  <div class="card-body">
                    <h2><%= project.name %></h2>
                    <p><%= project.description %></p>
                  </div>
                  <div class="link mb-3 ms-3">
                    <% if project.url %>
                      <%= link_to "Website <i class='fa-solid fa-globe'></i>", project.url, class: 'btn btn-outline-dark', target: '_blank' %>
                    <% end %>
                    <% if project.github %>
                      <%= link_to "Code <i class='fa-brands fa-github'></i>", project.github, class: 'btn btn-outline-dark', target: '_blank' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
