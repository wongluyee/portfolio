<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <div class="d-flex justify-content-center">
          <h2><i class="fa-solid fa-cube"></i> Projects</h2>
        </div>
        <div class="d-flex justify-content-center">
          <p>My personal and professional projects</p>
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <% data.projects.each do |project| %>
            <div class="col w-50">
              <div class="card">
                <%= image_tag project.image, alt: "project image" %>
                <div class="d-flex flex-column">
                  <div class="card-body">
                    <h2><%= project.name %></h2>
                    <p><%= project.description %></p>
                  </div>
                  <div class="link mb-3 ms-3">
                    <%= link_to "View website", project.url, class: 'btn btn-outline-dark', target: '_blank' %>
                    <%= link_to "View code", project.github, class: 'btn btn-outline-dark', target: '_blank' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
